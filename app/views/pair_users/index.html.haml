- model_class = PairUser
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name_user_1)
      %th= model_class.human_attribute_name(:name_user_2)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @pair_users.each do |pair_user|
      %tr
        %td= link_to pair_user.id, pair_user_path(pair_user)
        %td= pair_user.user1.name
        %td= pair_user.user2.name

        %td
          = link_to t('.show', :default => t("helpers.links.show")), pair_user_path(pair_user), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_pair_user_path(pair_user), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), pair_user_path(pair_user), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_pair_user_path, :class => 'btn btn-primary'

= button_to "Create coffee chat", session_path, method: 'post', :class => 'btn btn-primary'
